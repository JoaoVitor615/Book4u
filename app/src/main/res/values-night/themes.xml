<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Book4u" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/StatusBar</item>
        <item name="colorPrimaryVariant">@color/ColorPrimaryDark</item>
        <item name="colorOnPrimary">@color/ColorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ColorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/ColorSecondaryText</item>
        <item name="colorOnSecondary">@color/ColorSecondaryText</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ColorWhite</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/ColorDivider</item>

    </style>
</resources>